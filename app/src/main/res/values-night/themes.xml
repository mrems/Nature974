<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Geki" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontFamily">@font/open_sans</item>

        <!-- Typography styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Geki.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Geki.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Geki.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Geki.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Geki.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Geki.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Geki.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Geki.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Geki.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Geki.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Geki.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Geki.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Geki.Overline</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/offer_pro_primary</item>
        <item name="colorSecondaryVariant">@color/offer_pro_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Barres système en mode sombre -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
        <item name="android:colorBackgroundFloating">@color/card_background</item>
        <!-- Styles personnalisés pour le PopupMenu -->
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <!-- Style pour le TabLayout -->
        <item name="tabStyle">@style/CustomTabStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Geki.Splash" parent="Theme.AppCompat.NoActionBar">
        <!-- Edge-to-edge : pas de bande en haut, le splash s'étend sous la barre d'état -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="l">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="l">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <!-- Important: couvre aussi la zone de la status bar avant même que le layout soit affiché -->
        <item name="android:windowBackground">@drawable/geki_splash</item>
    </style>

    <style name="Theme.Geki.Auth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/offer_pro_primary</item>
        <item name="colorSecondaryVariant">@color/offer_pro_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowEnterTransition">@null</item>
        <item name="android:windowExitTransition">@null</item>
        <item name="android:windowReturnTransition">@null</item>
        <item name="android:windowReenterTransition">@null</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Style pour les onglets -->
    <style name="CustomTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/text_light_gray</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@android:color/holo_blue_light</item>
        <item name="tabIndicator">@drawable/tab_indicator_custom</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabPaddingBottom">16dp</item>
    </style>

    <style name="TextAppearance.Geki.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

