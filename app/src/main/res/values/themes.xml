<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Geronimo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontFamily">@font/open_sans</item>

        <!-- Typography styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Geronimo.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Geronimo.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Geronimo.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Geronimo.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Geronimo.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Geronimo.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Geronimo.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Geronimo.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Geronimo.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Geronimo.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Geronimo.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Geronimo.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Geronimo.Overline</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/offer_pro_primary</item>
        <item name="colorSecondaryVariant">@color/offer_pro_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <!-- Light status bar icons. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/white</item>
        <!-- Light navigation bar icons. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <!-- Styles personnalisés pour le PopupMenu -->
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <!-- Style pour le TabLayout -->
        <item name="tabStyle">@style/CustomTabStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Geronimo.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.Geronimo.Auth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Copy all properties from main theme -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/offer_pro_primary</item>
        <item name="colorSecondaryVariant">@color/offer_pro_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <!-- Add explicit window background -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Disable ALL window animations and transitions -->
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowEnterTransition">@null</item>
        <item name="android:windowExitTransition">@null</item>
        <item name="android:windowReturnTransition">@null</item>
        <item name="android:windowReenterTransition">@null</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:dropDownListViewStyle">@style/CustomDropDownListView</item>
    </style>

    <style name="CustomDropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listPreferredItemHeightSmall">28dp</item> <!-- Réduit la hauteur des éléments -->
        <item name="android:paddingStart">8dp</item> <!-- Padding à gauche -->
        <item name="android:paddingEnd">8dp</item> <!-- Padding à droite -->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="android:listPreferredItemPaddingRight">8dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent.RoundedCorners" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Geronimo.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomAlertDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomAlertDialogBodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent.RoundedCorners</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="CustomAlertDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAlertDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
    </style>

    <style name="CustomAlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    </style>

    <!-- Style pour les onglets -->
    <style name="CustomTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/text_medium_gray</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@android:color/holo_blue_light</item>
        <item name="tabIndicator">@drawable/tab_indicator_custom</item>
        <item name="tabIndicatorHeight">3dp</item> <!-- Hauteur de l'indicateur, correspond à celle du drawable -->
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabPaddingBottom">16dp</item> <!-- Espace entre l'icône et l'indicateur -->
    </style>

    <style name="NoRippleRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">@android:color/transparent</item>
        <item name="android:button">@drawable/custom_radio_button_selector</item>
    </style>

    <style name="TextAppearance.Geronimo.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geronimo.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geronimo.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geronimo.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geronimo.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geronimo.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geronimo.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Geronimo.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Geronimo.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Geronimo.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Geronimo.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geronimo.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Geronimo.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

</resources>




