<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Geki" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontFamily">@font/open_sans</item>

        <!-- Typography styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Geki.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Geki.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Geki.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Geki.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Geki.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Geki.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Geki.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Geki.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Geki.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Geki.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Geki.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Geki.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Geki.Overline</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/offer_pro_primary</item>
        <item name="colorSecondaryVariant">@color/offer_pro_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_translucent_green</item>
        <!-- Light status bar icons. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/navigation_bar_translucent_green</item>
        <!-- Light navigation bar icons. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <!-- Styles personnalisés pour le PopupMenu -->
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <!-- Style pour le TabLayout -->
        <item name="tabStyle">@style/CustomTabStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Geki.Splash" parent="Theme.AppCompat.NoActionBar">
        <!-- Edge-to-edge : pas de bande en haut, le splash s'étend sous la barre d'état -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="l">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="l">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <!-- Important: couvre aussi la zone de la status bar avant même que le layout soit affiché -->
        <item name="android:windowBackground">@drawable/geki_splash</item>
    </style>

    <style name="Theme.Geki.Auth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Copy all properties from main theme -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/offer_pro_primary</item>
        <item name="colorSecondaryVariant">@color/offer_pro_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <!-- Add explicit window background -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Disable ALL window animations and transitions -->
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowEnterTransition">@null</item>
        <item name="android:windowExitTransition">@null</item>
        <item name="android:windowReturnTransition">@null</item>
        <item name="android:windowReenterTransition">@null</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:dropDownListViewStyle">@style/CustomDropDownListView</item>
    </style>

    <style name="CustomDropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listPreferredItemHeightSmall">28dp</item> <!-- Réduit la hauteur des éléments -->
        <item name="android:paddingStart">8dp</item> <!-- Padding à gauche -->
        <item name="android:paddingEnd">8dp</item> <!-- Padding à droite -->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="android:listPreferredItemPaddingRight">8dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent.RoundedCorners" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Geki.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorSurface">@color/loading_card_background</item>
        <item name="colorPrimary">@color/text_title_discreet</item>
        <item name="colorOnSurface">@color/text_title_discreet</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomAlertDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomAlertDialogBodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent.RoundedCorners</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="CustomAlertDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAlertDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
    </style>

    <style name="CustomAlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    </style>

    <!-- Style pour les onglets -->
    <style name="CustomTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/text_medium_gray</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@android:color/holo_blue_light</item>
        <item name="tabIndicator">@drawable/tab_indicator_custom</item>
        <item name="tabIndicatorHeight">3dp</item> <!-- Hauteur de l'indicateur, correspond à celle du drawable -->
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabPaddingBottom">16dp</item> <!-- Espace entre l'icône et l'indicateur -->
    </style>

    <style name="NoRippleRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">@android:color/transparent</item>
        <item name="android:button">@drawable/custom_radio_button_selector</item>
    </style>

    <style name="TextAppearance.Geki.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geki.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geki.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geki.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geki.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geki.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geki.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Geki.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Geki.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Geki.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Geki.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Geki.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Geki.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <!-- Style pour une forme circulaire (50% de la taille des coins) -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>




