<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/page1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="0dp"
        android:gravity="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <VideoView
            android:id="@+id/page1_video_illustration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/page1_video_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bienvenue"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/white"
            android:contentDescription="Illustration de bienvenue" />
    </FrameLayout>

    <TextView
        android:id="@+id/page1_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geronimo c'est l'application qui connaÃ®t toutes les plantes et tous les animaux"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/page1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commencer"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_badge_style"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>

