<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F0"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Titre de la page -->
        <TextView
            android:id="@+id/title_new_page3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identifiez facilement"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp" />

        <!-- Image de la page -->
        <ImageView
            android:id="@+id/image_new_page3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/photo"
            android:contentDescription="Identification facile par photo"
            app:layout_constraintTop_toBottomOf="@id/title_new_page3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Texte descriptif sous l'image -->
        <TextView
            android:id="@+id/text_under_image_new_page3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Il suffit de prendre une photo pour avoir une rÃ©ponse en quelques secondes"
            android:textSize="16sp"
            android:textColor="#1F2937"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/image_new_page3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <!-- Bouton Continuer -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/page3_new_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continuer"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/button_primary_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_under_image_new_page3"
            android:layout_marginTop="48dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
