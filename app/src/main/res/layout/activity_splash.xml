<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splash_geki_character"
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:src="@drawable/geki_icon"
        app:layout_constraintBottom_toTopOf="@+id/splash_geki_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/splash_geki_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/geki_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_geki_character"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintDimensionRatio="4:1"
        app:layout_constraintHeight_max="200dp"
        app:layout_constraintWidth_max="500dp"
        android:contentDescription="TODO" />

</androidx.constraintlayout.widget.ConstraintLayout>
