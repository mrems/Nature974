<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/camera_preview_texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/overlay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Icône Options (Thème) -->
        <ImageButton
            android:id="@+id/options_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_new_options"
            app:tint="#FFFFFF"
            android:scaleType="fitCenter"
            android:alpha="0.9"/>

        <!-- Bloc titre + indicateur centré sous le titre -->
        <LinearLayout
            android:id="@+id/title_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Titre de l'application (Image) -->
            <ImageView
                android:id="@+id/app_title_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title"
                android:maxWidth="140dp"
                android:adjustViewBounds="true" />

            <!-- Indicateur sous le titre : flèche + texte "Click" -->
            <LinearLayout
                android:id="@+id/hint_title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↑ Click ↑"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Bloc compteur de crédits + indicateur centré sous le compteur -->
        <LinearLayout
            android:id="@+id/credits_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <!-- Conteneur pour le compteur de crédits (chiffre + icône) -->
            <LinearLayout
                android:id="@+id/credits_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone">

                <TextView
                    android:id="@+id/credits_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/compteur_icon" />

            </LinearLayout>

            <!-- Indicateur sous le compteur de crédits : texte "Click" + flèche à droite -->
            <LinearLayout
                android:id="@+id/hint_credits_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↑ Click ↑"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Conteneur pour les boutons du bas (Capture, Galerie) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="36dp">

            <!-- Bouton de capture -->
            <ImageButton
                android:id="@+id/capture_button"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/camera_icon"
                android:contentDescription="Bouton de capture"
                android:padding="0dp"
            android:alpha="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Indicateurs "slide" pour montrer les écrans accessibles par swipe -->
        <!-- Slide vers la gauche (par ex. galerie / historique) -->
        <LinearLayout
            android:id="@+id/hint_slide_left_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←  Swipe"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:includeFontPadding="false"/>

            
        </LinearLayout>

        <!-- Slide vers la droite (par ex. last analysis / autre onglet) -->
        <LinearLayout
            android:id="@+id/hint_slide_right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swipe  →"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:includeFontPadding="false"/>

        </LinearLayout>

            

            

        <!-- Indicateur "slide" en bas (décalé vers la droite, flèche qui pointe vers le bas) -->
        <LinearLayout
            android:id="@+id/hint_slide_bottom_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↓ Swipe ↓"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:includeFontPadding="false"/>
        </LinearLayout>

    </FrameLayout>

    <!-- Bottom sheet Galerie placé sous la caméra -->
    <LinearLayout
        android:id="@+id/gallery_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gallery_handle"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_peekHeight="0dp"
        app:behavior_hideable="true">

        <!-- Handle supérieur, visible uniquement pendant la transition et quand ouvert -->
        <FrameLayout
            android:id="@+id/gallery_sheet_handle"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/bg_gallery_handle"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone">
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray"
                android:alpha="0.8"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/gallery_sheet_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
