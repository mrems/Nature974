<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    tools:context=".PurchaseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Image geronimo_splash.png ajoutée ici -->
            <ImageView
                android:id="@+id/geronimo_splash_image_view"
                android:layout_width="200dp" 
                android:layout_height="300dp" 
                android:src="@drawable/gekito"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/geronimo_splash_content_description" />
            <!-- Ajustez la largeur et la hauteur de l'image geronimo_splash selon vos besoins -->

            <!-- Remplacé par ImageView pour title.png -->
            <ImageView
                android:id="@+id/geronimo_title_image_view"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/geki_title"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="-8dp"
                android:contentDescription="@string/geronimo_title_content_description" />

        <TextView
                android:id="@+id/unlock_adventure_title"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="@string/unlock_adventure_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/choose_plan_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_plan_description"
                android:textSize="16sp"
                android:textColor="@color/text_medium_gray"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" />

            <RadioGroup
                android:id="@+id/offer_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- 50 identifications / mois -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_50_identifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="8dp">

                    <!-- Réduit le padding pour diminuer la hauteur des cases -->
                    <LinearLayout
                        android:id="@+id/linear_layout_50_identifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="center_vertical">

                        <RadioButton
                            android:id="@+id/radio_50_identifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/custom_radio_button_selector"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@android:color/transparent"
                            android:theme="@style/NoRippleRadioButton"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/offer_50_identifications"
                                android:textSize="14sp"
                                android:textColor="@color/text_dark_gray" />

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                            android:gravity="end|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                android:text="@string/offer_50_price"
                                android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/per_month"
                            android:textSize="12sp"
                                android:textColor="@color/text_medium_gray"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

                <!-- 100 identifications / mois (Highlighted with background) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_100_identifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:id="@+id/linear_layout_100_identifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="center_vertical">

                        <RadioButton
                            android:id="@+id/radio_100_identifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/custom_radio_button_selector"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@android:color/transparent"
                            android:theme="@style/NoRippleRadioButton"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                            android:layout_marginStart="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:text="@string/offer_100_identifications"
                                android:textSize="14sp"
                                android:textColor="@color/text_dark_gray" />

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                            android:gravity="end|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                android:text="@string/offer_100_price"
                                android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/per_month"
                            android:textSize="12sp"
                                android:textColor="@color/text_medium_gray"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

                <!-- 300 identifications / mois -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_300_identifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/linear_layout_300_identifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="center_vertical">

                        <RadioButton
                            android:id="@+id/radio_300_identifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/custom_radio_button_selector"
                            android:clickable="false"
                            android:focusable="false"
                            android:background="@android:color/transparent"
                            android:theme="@style/NoRippleRadioButton"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                            android:layout_marginStart="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:text="@string/offer_300_identifications"
                                android:textSize="14sp"
                                android:textColor="@color/text_dark_gray" />

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                            android:gravity="end|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                android:text="@string/offer_300_price"
                                android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/per_month"
                            android:textSize="12sp"
                                android:textColor="@color/text_medium_gray"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            </RadioGroup>

            <Button
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/button_continue"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/offer_pro_primary"
                app:cornerRadius="12dp" />

            <TextView
                android:id="@+id/payment_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="@string/payment_info"
                android:textSize="14sp"
                android:textColor="@color/text_light_gray"
                android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


