<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical"
        android:padding="20dp">

        <!-- En-tête -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/offer_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/price_text"
            android:gravity="center"
            android:layout_marginBottom="30dp" />

        <!-- Barre de progression -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Carte Offre 1 - Starter -->
        <androidx.cardview.widget.CardView
        android:id="@+id/btn10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/offer_starter_light">

                <!-- Contenu à gauche -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="12dp">

                    <!-- Icône et titre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_offer_starter"
                            android:contentDescription="@string/offer_starter_title" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/offer_starter_title"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/price_text"
                            android:layout_marginStart="10dp" />
                    </LinearLayout>

                    <!-- Nombre de requêtes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_starter_queries"
                        android:textSize="14sp"
                        android:textColor="@color/subtitle_text"
                        android:layout_marginBottom="12dp" />

                    <!-- Prix -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/offer_starter_price"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/offer_starter_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/per_month"
                            android:textSize="12sp"
                            android:textColor="@color/subtitle_text"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Image à droite -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:src="@drawable/card1"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/offer_starter_title" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Carte Offre 2 - Pro (Populaire) -->
        <androidx.cardview.widget.CardView
        android:id="@+id/btn50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/offer_pro_light">

                <!-- Contenu à gauche -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="12dp">

                    <!-- Badge "Populaire" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_pro_badge"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_offer_badge"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Icône et titre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_offer_pro"
                            android:contentDescription="@string/offer_pro_title" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/offer_pro_title"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/price_text"
                            android:layout_marginStart="10dp" />
                    </LinearLayout>

                    <!-- Nombre de requêtes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_pro_queries"
                        android:textSize="14sp"
                        android:textColor="@color/subtitle_text"
                        android:layout_marginBottom="12dp" />

                    <!-- Prix -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/offer_pro_price"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/offer_pro_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/per_month"
                            android:textSize="12sp"
                            android:textColor="@color/subtitle_text"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Image à droite -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:src="@drawable/card2"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/offer_pro_title" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Carte Offre 3 - Premium (Meilleure valeur) -->
        <androidx.cardview.widget.CardView
        android:id="@+id/btn100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/offer_premium_light">

                <!-- Contenu à gauche -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="12dp">

                    <!-- Badge "Meilleure valeur" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_premium_badge"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_offer_badge_premium"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Icône et titre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_offer_premium"
                            android:contentDescription="@string/offer_premium_title" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/offer_premium_title"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/price_text"
                            android:layout_marginStart="10dp" />
                    </LinearLayout>

                    <!-- Nombre de requêtes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_premium_queries"
                        android:textSize="14sp"
                        android:textColor="@color/subtitle_text"
                        android:layout_marginBottom="12dp" />

                    <!-- Prix -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/offer_premium_price"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/offer_premium_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/per_month"
                            android:textSize="12sp"
                            android:textColor="@color/subtitle_text"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Image à droite -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:src="@drawable/card3"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/offer_premium_title" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
