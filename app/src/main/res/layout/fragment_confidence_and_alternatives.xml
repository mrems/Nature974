<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <!-- Contenu du Confidence Score (anciennement dans une carte) -->
        <LinearLayout
            android:id="@+id/confidence_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/confidence_score_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/confidence_score_label"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/open_sans_medium"/>

                    <TextView
                        android:id="@+id/confidence_score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/open_sans_medium"
                        android:textColor="@color/offer_pro_primary"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/confidence_score_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/custom_progress_bar"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/confidence_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confidence_description"
                    android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tutorial_explanation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/text_medium_gray"
            android:fontFamily="@font/open_sans_regular"
            android:visibility="gone"/>

        <!-- Section des alternatives -->
        <LinearLayout
            android:id="@+id/alternatives_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <TextView
                android:id="@+id/alternatives_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alternatives_label"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/open_sans_medium"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/alternatives_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alternatives_subtitle"
                android:textSize="14sp"
                android:textColor="@color/text_medium_gray"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/justification_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:lineSpacingMultiplier="1.1"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/alternatives_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /> <!-- Changed to wrap_content -->

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
