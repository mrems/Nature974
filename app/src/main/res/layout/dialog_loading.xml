<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:padding="32dp">

    <LinearLayout
        android:id="@+id/loading_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="280dp"
        android:maxWidth="340dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/loading_dialog_background"
        android:elevation="8dp"
        android:padding="32dp">

        <!-- Animation Lottie -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading_lottie_animation"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="0dp" />

        <!-- Titre principal -->
        <TextView
            android:id="@+id/loading_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_analysis_in_progress"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_identifying_photo"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center" />

    </LinearLayout>

</FrameLayout>

