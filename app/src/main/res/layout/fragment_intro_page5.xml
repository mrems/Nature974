<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <TextView
            android:id="@+id/page4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dernière étape"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/page4_illustration"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/geronimo_app"
            android:scaleType="fitCenter"
            android:layout_marginBottom="24dp"
            android:contentDescription="Logo Geronimo" />

        <TextView
            android:id="@+id/page4_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pour utiliser l'application, vous devez maintenant vous connecter avec Google et accepter la permission pour utiliser la caméra"
            android:textSize="16sp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/page4_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Se connecter"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/button_primary_rounded"
            android:layout_marginTop="16dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

