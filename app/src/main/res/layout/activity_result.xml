<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/result_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/result_local_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:layout_marginBottom="8dp"
            tools:text="Nom Local / Créole : Tangue"/>

        <TextView
            android:id="@+id/result_scientific_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="?android:textColorSecondary"
            android:layout_marginBottom="16dp"
            tools:text="Nom Scientifique : Tenrec ecaudatus"/>

        <TextView
            android:id="@+id/result_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimary"
            tools:text="Description : Le tangue est un petit mammifère insectivore endémique de Madagascar et introduit à La Réunion. Il est caractérisé par son corps recouvert de piquants et sa capacité à s'enfouir."/>

    </LinearLayout>

</ScrollView>
