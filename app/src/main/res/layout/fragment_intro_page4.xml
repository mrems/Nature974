<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:paddingBottom="20dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/new_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intro_page4_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_horizontal"/>

            <!-- Image geronimo_splash.png -->
            <ImageView
                android:id="@+id/geronimo_splash_image_view"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:src="@drawable/onboard4"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="24dp"
                android:contentDescription="Geronimo Splash" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/intro_page4_description"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_marginTop="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/intro_page4_button_next"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/button_primary_rounded"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
