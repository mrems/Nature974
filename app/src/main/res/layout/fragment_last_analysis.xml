<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LastAnalysisFragment"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/last_analysis_content">

        <ImageView
            android:id="@+id/last_analysis_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="Image de la dernière analyse"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toStartOf="@id/last_analysis_options_button">

                    <TextView
                        android:id="@+id/last_analysis_local_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        tools:text="Tangue" />

                    <TextView
                        android:id="@+id/last_analysis_scientific_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        tools:text="Tenrec ecaudatus" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/last_analysis_options_button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menu d'options"
                    android:src="@drawable/ic_three_dots_vertical_large"
                    android:padding="0dp"
                    android:translationX="24dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/last_analysis_type_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_endemique"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:textColor="@color/badge_text"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Plante Endémique" />

        </LinearLayout>

        <!-- Cartes d'informations -->
        <LinearLayout
            android:id="@+id/last_analysis_info_cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <include layout="@layout/item_info_card" />
            <include layout="@layout/item_info_card" />
            <include layout="@layout/item_info_card" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
