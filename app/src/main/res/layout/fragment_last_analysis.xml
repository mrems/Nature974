<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LastAnalysisFragment"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/last_analysis_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/last_analysis_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:contentDescription="Image de la dernière analyse"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/last_analysis_tutorial_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXEMPLE"
                android:background="@drawable/badge_exemple"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:textColor="@color/badge_text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/last_analysis_local_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/kalam_regular"
                        android:letterSpacing="0.03"
                        android:layout_marginBottom="-4dp"
                        android:lineSpacingMultiplier="0.7"
                        tools:text="Tangue" />

                    <TextView
                        android:id="@+id/last_analysis_scientific_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        tools:text="Tenrec ecaudatus" />

                </LinearLayout>

                

            </RelativeLayout>

            <TextView
                android:id="@+id/last_analysis_type_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_endemique"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:textColor="@color/badge_text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                tools:text="Plante Endémique" />

        </LinearLayout>

        <!-- Cartes d'informations -->
        <LinearLayout
            android:id="@+id/last_analysis_info_cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <include layout="@layout/item_info_card" />
            <include layout="@layout/item_info_card" />
            <include layout="@layout/item_info_card" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
