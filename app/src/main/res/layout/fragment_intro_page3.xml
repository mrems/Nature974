<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F0"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:padding="24dp">

        <!-- Titre de la page -->
        <TextView
            android:id="@+id/title_page3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_page3_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center" />

        <!-- Image de la page -->
        <ImageView
            android:id="@+id/image_page3"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:src="@drawable/photo"
            android:contentDescription="@string/intro_page3_description"
            android:layout_marginTop="24dp" />

        <!-- Texte descriptif sous l'image -->
        <TextView
            android:id="@+id/text_under_image_page3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_page3_description"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <!-- Bouton Continuer -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/page3_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/intro_page3_button_next"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/button_primary_rounded"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</ScrollView>
