<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#32C75F" /> <!-- Couleur pour la bordure -->
            <size
                android:width="20dp"
                android:height="20dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape android:shape="oval">
            <solid android:color="#32C75F" /> <!-- Couleur pour le centre -->
        </shape>
    </item>
</layer-list>

